# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# Tab indentation (no size specified)
indent_style = tab
indent_size = 4

# 2 space indentation
[*.yml]
indent_style = space
indent_size = 2

# Matches multiple files with brace expansion notation
# Matches the exact files either bower.json, polymer.json or .travis.yml
[{bower.json,polymer.json,.travis.yml}]
indent_style = space
indent_size = 2

